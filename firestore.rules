rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Sites collection
    match /sites/{siteId} {
      // Public: read only published sites
      allow read: if resource.data.status == 'published';
      
      // Allow pending submissions to be read by their creator
      allow read: if resource.data.status == 'pending' 
        && request.auth != null 
        && resource.data.submittedBy == request.auth.token.email;
      
      // Public submission (create) if status is 'pending'
      allow create: if request.resource.data.status == 'pending'
        && request.resource.data.keys().hasAll(['url', 'name', 'category', 'description', 'slug'])
        && request.resource.data.name.size() > 0
        && request.resource.data.url.size() > 0;
      
      // Cloud Functions can update (using admin SDK)
      // Web clients cannot update/delete
      allow update, delete: if false;
    }
    
    // Users collection - auth required
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Payments collection - read by owner only, write by Cloud Functions
    match /payments/{paymentId} {
      allow read: if request.auth != null 
        && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }
    
    // Categories - public read only
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
