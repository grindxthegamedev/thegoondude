rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Sites collection
    match /sites/{siteId} {
      // Allow reading all sites (admin panel needs this)
      // Note: Admin auth is handled client-side for MVP
      allow read: if true;
      
      // Public submission (create) if status is 'pending'
      allow create: if request.resource.data.status == 'pending'
        && request.resource.data.keys().hasAll(['url', 'name', 'category', 'description', 'slug'])
        && request.resource.data.name.size() > 0
        && request.resource.data.url.size() > 0;
      
      // Cloud Functions handle updates via Admin SDK
      allow update, delete: if false;
    }
    
    // Users collection - public read for submitters list
    match /users/{userId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Payments - Cloud Functions only
    match /payments/{paymentId} {
      allow read, write: if false;
    }
    
    // Categories - public read
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
